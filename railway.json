{
  "build": {
    "builds": [
      { "src": "backend/Dockerfile", "use": "Dockerfile", "name": "backend" },
      { "src": "frontend/Dockerfile", "use": "Dockerfile", "name": "frontend" }
    ]
  },
  "deploy": {
    "services": [
      {
        "name": "backend",
        "runCommand": "uvicorn app.main:app --host 0.0.0.0 --port $PORT",
        "env": {
          "PORT": { "from": "PORT" }
        },
        "build": "backend"
      },
      {
        "name": "frontend",
        "runCommand": "npm run dev",
        "build": "frontend"
      }
    ]
  },
  "plugins": []
}
